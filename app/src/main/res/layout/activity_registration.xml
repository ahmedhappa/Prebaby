<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/regis"
    android:orientation="vertical"
    tools:context="com.usama.salamtek.RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/profileregis" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/ic_person_white_24dp"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/Username"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/mailiconp"
            android:drawablePadding="12dp"
            android:hint="@string/email"
            android:inputType="text"
            android:maxLines="1"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/birth"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/age"
            android:maxLines="1"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/smartphone"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/mobile"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/ic_lock_white_24dp"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/pass"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/confirmPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/ic_lock_white_24dp"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/confirmPass"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/country"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/country"
            android:maxLines="1"
            android:textColorHint="#ffffff" />

        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/city"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="@string/city"
            android:maxLines="1"
            android:textColorHint="#ffffff" />


        <Button
            android:id="@+id/regs_bun"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@+id/city"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/btnstyle3"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp"
            android:text="@string/SignUp"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="normal" />

    </LinearLayout>

</ScrollView>
